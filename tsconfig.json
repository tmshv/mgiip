{
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "target": "ES2020",
        "strict": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./app/*"
            ]
        },
        "noEmit": true,
        "types": ["vite/client", "node"]
    }
}
